#!/bin/sh
set -e # Stop on error

# Install shit
brew bundle --cleanup

# I believe one day the Rust toolchain
# will be superior to anything on the market.
# Until then, FML
test ! -d $HOME/.cargo && rustup -y
cargo install cargo-binstall
cargo binstall \
    cargo-outdated \
    starship

# Symlink dotfiles
symlnk() {
    if test -L $2
    then
        return
    fi

    if test -d $2
    then
        rm -rf $2
    fi

    ln -sf $1 $2
}

symlnk $(pwd)/dot_shrc   $HOME/.zshrc
symlnk $(pwd)/dot_config $HOME/.config
