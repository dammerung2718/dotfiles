{
  // font
  "ui_font_family": "Fira Code",
  "buffer_font_family": "Fira Code",

  // theme
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "terminal": {
    "dock": "right"
  },
  "preferred_line_length": 80,
  "tab_size": 2,
  "languages": {
    "Rust": {
      "tab_size": 4
    },
    "Go": {
      "tab_size": 8,
      "hard_tabs": true
    }
  },

  // lsp
  "format_on_save": "on",
  "ensure_final_newline_on_save": true
}
