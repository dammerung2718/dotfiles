{
  // font
  "ui_font_family": "Fira Code",
  "buffer_font_family": "Fira Code",

  // theme
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  },
  "terminal": {
    "dock": "right"
  },
  "preferred_line_length": 80,

  // lsp
  "format_on_save": "on",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "ensure_final_newline_on_save": true
}
