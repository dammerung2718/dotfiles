{
  // font
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",

  // theme
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "terminal": {
    "dock": "right"
  },
  "preferred_line_length": 80,

  // keys
  "vim_mode": true,

  // lsp
  "format_on_save": "on",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "ensure_final_newline_on_save": true
}
